{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "./dist-cron",
		"rootDir": ".",
		"allowJs": true,
		"sourceMap": true,
		"paths": {
			"@shared/*": ["./src/shared/*"]
		}
	},
	"include": [
		"scripts/updateGTFSData.js",
		"src/shared/**/*.ts",
		"src/cron/**/*.ts"
	],
	"exclude": ["node_modules", ".next", "dist-cron"]
}
